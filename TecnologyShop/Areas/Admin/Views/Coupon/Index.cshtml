<link href="~/css/disenoTablas.css" rel="stylesheet" />
@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2> Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
     {
        <table class="content-table table border">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.MinimunAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.IsActive)
                    </th>
                    <th></th>
                    <th>Maintenance</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>
                             @Html.DisplayFor(x => item.Discount)
                        </td>
                        <td>
                         @Html.DisplayFor(x => item.MinimunAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.IsActive)
                         </td>
                        <td> <partial name="_tableButtonPartial" model="item.Id" /></td>
                    </tr>
                </tbody>
             }  


        </table>

     }
        else
        {
            <p>No Coupons exists...</p>
        }
</div>



