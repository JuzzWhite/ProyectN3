@model ApplicationUser
<link href="~/css/forms.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Edit Category</h2>
<br />
<form class="form" method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Html.DisplayNameFor(m => m.Name)" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Html.DisplayNameFor(m => m.Name)" class="field" />
            </div>
            <span asp-validation-for="@Html.DisplayNameFor(m => m.Name)" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" model="@Html.DisplayNameFor(m => m.Id)" />
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}