<link href="~/css/disenoTablas.css" rel="stylesheet" />
@using TecnologyShop.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2> Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table id="Tabla" class="content-table table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>@Html.DisplayNameFor(m => m.RegisterDate)</th>

                        <th>Maintenance</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.RegisterDate)
                            </td>

                            <partial name="_TableButtonPartial" model="item.Id" />

                        </tr>
                    </tbody>
                }
            </table>
        }
        else
        {
            <p>No category exists...</p>
        }
    </div>
</div>
<script src="~/js/datatables.min.js"></script>
@section scripts{

    <script>
        $(this.document).ready(function () {
            $('#Tabla'.DataTable());
        });
    </script>
}